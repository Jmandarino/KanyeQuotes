<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".home" android:background="#F2F2F2">

    <Button
            android:text="SHARE"
            android:layout_width="294dp"
            android:layout_height="34dp"
            android:id="@+id/shareButton" android:textColor="#ABABAB"
            android:textAlignment="center" android:fontFamily="@font/vcr" android:textAllCaps="true"
            android:textColorHint="#ABD81414" android:background="#33ABABAB" android:includeFontPadding="true"
            android:textSize="14sp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.504" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/refreshButton" app:layout_constraintVertical_bias="0.031"/>
    <TextView
            android:text="Main! "
            android:layout_width="325dp"
            android:layout_height="108dp"
            android:id="@+id/kanyeQuoteTextView" android:textAlignment="center"
            android:textColor="#ABABAB" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.428"
            android:textSize="20sp" android:fontFamily="@font/vcr"/>
    <Button
            android:text="REFRESH"
            android:layout_width="294dp"
            android:layout_height="34dp"
            android:id="@+id/refreshButton" android:textColor="#ABABAB"
            android:textAlignment="center" android:fontFamily="@font/vcr" android:textAllCaps="true"
            android:textColorHint="#ABD81414" android:background="#33ABABAB" android:includeFontPadding="true"
            android:textSize="14sp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/kanyeQuoteTextView"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.035"/>
</android.support.constraint.ConstraintLayout>